bool dfs(TreeNode* root) {
    if (root == NULL) return false;

    bool left = dfs(root->left);    // ç»§ç»­é€’å½’éå†å·¦è¾¹
    bool right = dfs(root->right); // å†é€’å½’éå†å³è¾¹

    // ğŸ‘‡ç»“åˆå·¦å³å­æ ‘çš„è¿”å›å€¼è¿›è¡Œå¤„ç†
    if (left && right) return true;

    return left || right;
}

