bool dfs(TreeNode* root) {
    if (root == NULL) return false;
    
    if (root->val == target) return true; // æ‰¾åˆ°äº†ç›®æ ‡

    if (dfs(root->left)) return true;     // åªè¦å·¦è¾¹æ‰¾åˆ°äº†ï¼Œç›´æ¥è¿”å›
    if (dfs(root->right)) return true;    // å¦åˆ™çœ‹å³è¾¹

    return false;                         // ä¸¤è¾¹éƒ½æ²¡æ‰¾åˆ°
}
